{
  "flags": {
    "lintJscs": true,
    "lintJshint": true,
    "autoprefixer": true,
    "minifyCss": true,
    "mergeMediaQueries": true
  },
  "server": {
    "port": 3000,
    "baseDir": "src",
    "routes": {}
  },
  "filesName": {
    "styles": "style.min.css"
  },
  "bundle": {
    "app": {
      "name": "app.js"
    },
    "dep":{
      "name": "dep.js"
    },
    "ng": {
      "name": "ng.js",
      "arithmetic": "angular + angular-animate + angular-aria + angular-cookies"
    },
    "ngMaterial": {
      "name": "ng-material.js",
      "arithmetic": "angular-material - angular - angular-animate - angular-aria"
    },
    "vendors": {
      "name": "vendors.js",
      "arithmetic": "angular-translate + angular-translate-handler-log + angular-translate-loader-static-files + angular-translate-storage-cookie + angular-translate-storage-local + angular-ui-router - angular"
    }
  },
  "htmlReplace": [
    "assets/js/system.js",
    "assets/js/app.js",
    "assets/js/dep.js"
  ],
  "paths": {
    "bundle": {
      "config": "src/config.js",
      "main": "src/app/main.js",
      "src": [
        "src/jspm_packages/system.js",
        "src/jspm_packages/system.js.map"
      ],
      "dest": "dist/assets/js"
    },
    "cleanAll": [
      ".tmp/*",
      "dist/*",
      "!dist/.git*"
    ],
    "html": {
      "src": "src/index.html",
      "dest": "dist/"
    },
    "i18n": {
      "clean": "dist/assets/i18n/*",
      "src": "src/assets/i18n/*.json",
      "dest": "dist/assets/i18n"
    },
    "images": {
      "clean": "dist/assets/img/*",
      "src": "src/assets/img/**/*",
      "dest": "dist/assets/img"
    },
    "lint": {
      "src": [
        "src/app/**/*.js",
        "src/assets/js/**/*.js"
      ]
    },
    "styles": {
      "src": "src/assets/scss/style.scss",
      "dest": {
        "dev": "src/assets/css",
        "dist": "dist/assets/css"
      },
      "watch": [
        "src/app/**/*.scss",
        "src/assets/scss/**/*"
      ]
    },
    "reload": [
      "src/app/**/*.js",
      "src/assets/i18n/*.json",
      "src/assets/img/**/*",
      "src/**/*.html"
    ]
  }
}