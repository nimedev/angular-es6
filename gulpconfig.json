{
  "flags": {
    "lintJscs": true,
    "lintJshint": true,
    "autoprefixer": true,
    "minifyCss": true,
    "mergeMediaQueries": true
  },
  "server": {
    "port": 3000,
    "baseDir": {
      "src": "source",
      "dev": "dev"
    },
    "routes": {
      "/": "dev"
    }
  },
  "filesName": {
    "styleOut": "style.css"
  },
  "bundle": {
    "app": {
      "name": "app.js",
      "src": "app/main.js",
      "ignoreVendors": true
    },
    "dep": {
      "name": "dep.js",
      "onlyVendors": true
    },
    "ng": {
      "name": "ng.js",
      "src": "angular",
      "arithmetic": "+ angular-animate + angular-aria + angular-cookies"
    },
    "ngMaterial": {
      "name": "ng-material.js",
      "src": "angular-material",
      "arithmetic": "- angular - angular-animate - angular-aria"
    },
    "vendors": {
      "name": "vendors.js",
      "src": "angular-translate",
      "arithmetic": "+ angular-translate-handler-log + angular-translate-loader-static-files + angular-translate-storage-cookie + angular-translate-storage-local + angular-ui-router - angular"
    }
  },
  "htmlReplace": [
    "assets/js/dep.js",
    "assets/js/app.js"
  ],
  "paths": {
    "bundle": {
      "main": "source/app/main.js",
      "src": [
        "source/jspm_packages/system.js",
        "source/config.js"
      ],
      "dest": {
        "dev": "dev/assets/js",
        "prod": "dist/assets/js"
      },
      "watch": [
        "source/app/**/*.js",
        "source/app/**/*.html"
      ]
    },
    "cleanAll": [
      ".tmp/*",
      "dist/*",
      "!dist/.git*"
    ],
    "html": {
      "src": "source/*.html",
      "dest": {
        "dev": "dev",
        "prod": "dist"
      },
      "watch": "source/*html"
    },
    "i18n": {
      "src": "source/assets/i18n/*.json",
      "dest": {
        "dev": "dev/assets/i18n",
        "prod": "dist/assets/i18n"
      },
      "watch": "source/assets/i18n/*.json"
    },
    "images": {
      "src": "source/assets/img/**/*",
      "dest": {
        "dev": "dev/assets/img",
        "prod": "dist/assets/img"
      },
      "watch": "source/assets/img/**/*"
    },
    "lint": {
      "src": [
        "source/app/**/*.js",
        "source/assets/js/**/*.js",
        "!source/assets/js/app.js",
        "!source/assets/js/dep.js"
      ]
    },
    "style": {
      "src": "source/scss/style.scss",
      "dest": {
        "dev": "dev/assets/css",
        "prod": "dist/assets/css"
      },
      "watch": [
        "source/app/**/*.scss",
        "source/scss/**/*"
      ]
    },
    "reload": [
      "source/**/*.html",
      "source/app/**/*.js",
      "source/assets/i18n/*.json",
      "source/assets/img/**/*"
    ]
  }
}