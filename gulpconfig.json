{
  "flags": {
    "lintJscs": true,
    "lintJshint": true,
    "autoprefixer": true,
    "minifyCss": true,
    "mergeMediaQueries": true
  },
  "server": {
    "port": 3000,
    "baseDir": "src",
    "routes": {}
  },
  "paths": {
    "cleanAll": [
      ".tmp/*",
      "dist/*",
      "!dist/.git*"
    ],
    "i18n": {
      "clean": "dist/assets/i18n/*",
      "src": "src/assets/i18n/*.json",
      "dest": "dist/assets/i18n"
    },
    "images": {
      "clean": "dist/assets/img/*",
      "src": "src/assets/img/**/*",
      "dest": "dist/assets/img"
    },
    "html": {
      "src": "src/index.html",
      "dest": "dist/"
    },
    "lint": {
      "src": [
        "src/app/**/*.js",
        "src/assets/js/**/*.js"
      ]
    },
    "styles": {
      "clean": [
        "src/assets/css/*",
        "dist/assets/css/*"
      ],
      "src": "src/assets/scss/style.scss",
      "dest": {
        "dev": "src/assets/css",
        "dist": "dist/assets/css"
      },
      "watch": [
        "src/app/**/*.scss",
        "src/assets/scss/**/*"
      ]
    },
    "reload": [
      "src/app/**/*.js",
      "src/assets/i18n/*.json",
      "src/assets/img/**/*",
      "src/**/*.html"
    ]
  }
}