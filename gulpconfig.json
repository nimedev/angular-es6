{
  "flags": {
    "autoprefixer": true,
    "minifyCss": true,
    "mergeMediaQueries": true
  },
  "server": {
    "port": 3000,
    "baseDir": "src",
    "routes": {
      "/jspm_packages": "jspm_packages",
      "/": "dist"
    }
  },
  "templateCache": {
    "file": "templates.module.js",
    "options": {
      "root": "app/",
      "standalone": true
    }
  },
  "paths": {
    "cleanAll": [
      ".tmp/*",
      "dist/*",
      "!dist/.git*"
    ],
    "i18n": {
      "clean": "dist/assets/i18n/*",
      "src": "src/assets/i18n/*.json",
      "dest": "dist/assets/i18n"
    },
    "images": {
      "clean": "dist/assets/img/*",
      "src": "src/assets/img/**/*",
      "dest": "dist/assets/img"
    },
    "html": {
      "src": "src/index.html",
      "dest": "dist/"
    },
    "lint": {
      "src": [
        "src/app/**/*.js",
        "src/assets/js/**/*.js"
      ],
      "watch": [
        "src/app/**/*.js",
        "src/app/**/*.json"
      ]
    },
    "styles": {
      "clean": "dist/assets/css/*",
      "src": "src/assets/scss/style.scss",
      "dest": "dist/assets/css",
      "watch": [
        "src/app/**/*.scss",
        "src/assets/scss/**/*"
      ]
    },
    "templates": {
      "clean": "src/app/shared/templates/*",
      "src": "src/app/**/*.html",
      "dest": "src/app/shared/templates",
      "watch": "src/app/**/*.html"
    },
    "reload": [
      "src/assets/i18n/*.json",
      "src/assets/img/**/*",
      "src/index.html"
    ]
  }
}