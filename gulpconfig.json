{
  "flags": {
    "lintJscs": true,
    "lintJshint": true,
    "autoprefixer": true,
    "minifyCss": true,
    "mergeMediaQueries": true
  },
  "server": {
    "port": 3000,
    "baseDir": {
      "src": "src",
      "dev": "dev"
    },
    "routes": {
      "/": "dev"
    }
  },
  "filesName": {
    "styleOut": "style.css"
  },
  "bundle": {
    "app": {
      "name": "app.js",
      "src": "app/main.js",
      "ignoreVendors": true
    },
    "dep": {
      "name": "dep.js",
      "onlyVendors": true
    },
    "ng": {
      "name": "ng.js",
      "src": "angular",
      "arithmetic": "+ angular-animate + angular-aria + angular-cookies"
    },
    "ngMaterial": {
      "name": "ng-material.js",
      "src": "angular-material",
      "arithmetic": "- angular - angular-animate - angular-aria"
    },
    "vendors": {
      "name": "vendors.js",
      "src": "angular-translate",
      "arithmetic": "+ angular-translate-handler-log + angular-translate-loader-static-files + angular-translate-storage-cookie + angular-translate-storage-local + angular-ui-router - angular"
    }
  },
  "htmlReplace": [
    "assets/js/dep.js",
    "assets/js/app.js"
  ],
  "paths": {
    "bundle": {
      "main": "src/app/main.js",
      "src": [
        "src/jspm_packages/system.js",
        "src/config.js"
      ],
      "dest": {
        "dev": "dev/assets/js",
        "prod": "dist/assets/js"
      },
      "watch": [
        "src/app/**/*",
        "!src/app/**/*.scss"
      ]
    },
    "cleanAll": [
      ".tmp/*",
      "dist/*",
      "!dist/.git*"
    ],
    "html": {
      "src": "src/*.html",
      "dest": {
        "dev": "dev",
        "prod": "dist"
      }
    },
    "i18n": {
      "src": "src/assets/i18n/**/*",
      "dest": {
        "dev": "dev/assets/i18n",
        "prod": "dist/assets/i18n"
      }
    },
    "images": {
      "src": "src/assets/img/**/*",
      "dest": {
        "dev": "dev/assets/img",
        "prod": "dist/assets/img"
      }
    },
    "lint": {
      "src": [
        "src/app/**/*.js",
        "src/assets/js/**/*.js",
        "!src/assets/js/app.js",
        "!src/assets/js/dep.js"
      ]
    },
    "misc": {
      "src": [
        "src/robots.txt",
        "src/.htaccess"
      ],
      "dest": {
        "dev": "dev",
        "prod": "dist"
      }
    },
    "style": {
      "src": "src/scss/style.scss",
      "dest": {
        "dev": "dev/assets/css",
        "prod": "dist/assets/css"
      },
      "watch": [
        "src/app/**/*",
        "src/scss/**/*",
        "!src/app/**/*.js",
        "!src/app/**/*.json",
        "!src/app/**/*.html"
      ]
    },
    "reload": {
      "src": [
        "src/**/*",
        "!src/**/*.scss"
      ],
      "dev": "dev/**/*"
    }
  }
}